<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs307.groupnote"
    android:versionCode="1"
    android:versionName="1.0" >

    
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cs307.groupnote.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.cs307.groupnote.CreateSession"
          android:label="@string/app_name">
		</activity>
		<activity android:name="com.cs307.groupnote.EditNote"
          android:label="@string/app_name">
		</activity>
		<activity android:name="com.cs307.groupnote.FindSession"
          android:label="@string/app_name">
		</activity>
		<activity android:name="com.cs307.groupnote.JoinedSessions"
          android:label="@string/app_name">
		</activity>
		<activity android:name="com.cs307.groupnote.Login"
          android:label="@string/app_name"
          android:launchMode="singleTop">
          <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
		<activity android:name="com.cs307.groupnote.MyNotes"
          android:label="@string/app_name">
		</activity>
		<activity android:name="com.cs307.groupnote.NotesOverview"
          android:label="@string/app_name">
		</activity>
		<activity android:name="com.cs307.groupnote.Settings"
          android:label="@string/app_name">
		</activity>
		<activity android:name="com.cs307.groupnote.ViewNote"
          android:label="@string/app_name">
		</activity>
    </application>

</manifest>